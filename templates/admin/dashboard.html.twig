        <p class="subtitle">Bienvenue sur le panneau d'administration üèéÔ∏è</p>
    </div>

    {# ===== CARTES STATS ===== #}
    <div class="stats-grid">

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-helmet-safety"></i>
            </div>
            <div class="stat-info">
                <span class="stat-number">{{ total_pilotes }}</span>
                <span class="stat-label">Pilotes</span>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-flag-checkered"></i>
            </div>
            <div class="stat-info">
                <span class="stat-number">{{ total_ecuries }}</span>
                <span class="stat-label">√âcuries</span>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-comments"></i>
            </div>
            <div class="stat-info">
                <span class="stat-number">{{ total_commentaires }}</span>
                <span class="stat-label">Commentaires</span>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-trophy"></i>
            </div>
            <div class="stat-info">
                <span class="stat-number">{{ total_courses }}</span>
                <span class="stat-label">Courses</span>
            </div>
        </div>

    </div>

    {# ===== RACCOURCIS ===== #}
    <div class="quick-actions">
        <h2>Acc√®s rapide</h2>
        <div class="actions-grid">
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\PiloteCrudController').generateUrl() }}" class="action-btn">
                <i class="fas fa-helmet-safety"></i> G√©rer les pilotes
            </a>
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\EcurieCrudController').generateUrl() }}" class="action-btn">
                <i class="fas fa-flag-checkered"></i> G√©rer les √©curies
            </a>
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\CommentaireCrudController').generateUrl() }}" class="action-btn">
                <i class="fas fa-comments"></i> G√©rer les commentaires
            </a>
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\CourseCrudController').generateUrl() }}" class="action-btn">
                <i class="fas fa-trophy"></i> G√©rer les courses
            </a>
        </div>
    </div>

</div>

<style>
.f1-dashboard {
    padding: 2rem;
    color: #fff;
}

.dashboard-header {
    margin-bottom: 2rem;
    border-left: 4px solid #e10600;
    padding-left: 1rem;
}

.dashboard-header h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
    margin: 0;
}

.f1-red {
    color: #e10600;
}

.subtitle {
    color: #e0e0e0;
    margin: 0.5rem 0 0;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2.5rem;
}

.stat-card {
    background-color: #232323;
    border: 1px solid #222;
    border-top: 3px solid #e10600;
    border-radius: 8px;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1.2rem;
    transition: transform 0.2s, box-shadow 0.2s;
}

.stat-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(225, 6, 0, 0.2);
}

.stat-icon {
    width: 50px;
    height: 50px;
    background-color: rgba(225, 6, 0, 0.15);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.3rem;
    color: #e10600;
    flex-shrink: 0;
}

.stat-info {
    display: flex;
    flex-direction: column;
}

.stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
    line-height: 1;
}

.stat-label {
    font-size: 0.85rem;
    color: #e0e0e0;
    margin-top: 0.3rem;
}

.quick-actions h2 {
    font-size: 1.2rem;
    color: #f2f2f2;
    margin-bottom: 1rem;
    border-bottom: 1px solid #222;
    padding-bottom: 0.5rem;
}

.actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
}

.action-btn {
    background-color: #1a1a1a;
    border: 1px solid #e10600cc;
    color: #f2f2f2;
    padding: 0.9rem 1.2rem;
    border-radius: 6px;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.7rem;
    font-size: 0.95rem;
    transition: background 0.2s, color 0.2s, border-color 0.2s;
}

.action-btn:hover {
    background-color: #e10600;
    border-color: #e10600;
    color: #fff;
}

.action-btn i {
    font-size: 1rem;
}
</style>
{% endblock %}
