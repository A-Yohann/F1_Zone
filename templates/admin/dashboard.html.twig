{% extends '@!EasyAdmin/page/content.html.twig' %}

{% block main %}
<div class="f1-dashboard">

    {# ===== TITRE ===== #}
    <div class="dashboard-header">
        <h1><span class="f1-red">F1</span> Zone — Dashboard Admin</h1>
        <p class="subtitle">Bienvenue sur le panneau d'administration</p>
    </div>

    {# ===== CARTES STATS ===== #}
    <div class="stats-grid">

        <a href="{{ ea_url().setController('App\\Controller\\Admin\\UserCrudController').generateUrl() }}" class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-info">
                <span class="stat-number">{{ total_users }}</span>
                <span class="stat-label">Utilisateurs</span>
            </div>
        </a>

        <a href="{{ ea_url().setController('App\\Controller\\Admin\\PiloteCrudController').generateUrl() }}" class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-helmet-safety"></i>
            </div>
            <div class="stat-info">
                <span class="stat-number">{{ total_pilotes }}</span>
                <span class="stat-label">Pilotes</span>
            </div>
        </a>

        <a href="{{ ea_url().setController('App\\Controller\\Admin\\EcurieCrudController').generateUrl() }}" class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-flag-checkered"></i>
            </div>
            <div class="stat-info">
                <span class="stat-number">{{ total_ecuries }}</span>
                <span class="stat-label">Écuries</span>
            </div>
        </a>

        <a href="{{ ea_url().setController('App\\Controller\\Admin\\CommentaireCrudController').generateUrl() }}" class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-comments"></i>
            </div>
            <div class="stat-info">
                <span class="stat-number">{{ total_commentaires }}</span>
                <span class="stat-label">Commentaires</span>
            </div>
        </a>

        <a href="{{ ea_url().setController('App\\Controller\\Admin\\CourseCrudController').generateUrl() }}" class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-trophy"></i>
            </div>
            <div class="stat-info">
                <span class="stat-number">{{ total_courses }}</span>
                <span class="stat-label">Courses</span>
            </div>
        </a>

    </div>

    {# ===== RACCOURCIS ===== #}
    <div class="quick-actions">
        <h2>Accès rapide</h2>
        <div class="actions-grid">
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\UserCrudController').generateUrl() }}" class="action-btn">
                <i class="fas fa-users"></i> Gérer les utilisateurs
            </a>
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\PiloteCrudController').generateUrl() }}" class="action-btn">
                <i class="fas fa-helmet-safety"></i> Gérer les pilotes
            </a>
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\EcurieCrudController').generateUrl() }}" class="action-btn">
                <i class="fas fa-flag-checkered"></i> Gérer les écuries
            </a>
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\CommentaireCrudController').generateUrl() }}" class="action-btn">
                <i class="fas fa-comments"></i> Gérer les commentaires
            </a>
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\CourseCrudController').generateUrl() }}" class="action-btn">
                <i class="fas fa-trophy"></i> Gérer les courses
            </a>
            <a href="{{ path('admin_actu_index') }}" class="action-btn">
                <i class="fas fa-newspaper"></i> Gérer les actualités
            </a>
        </div>
    </div>

</div>
{% endblock %}
