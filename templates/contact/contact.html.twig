{% extends 'base.html.twig' %}

{% block title %}F1-Zone Contact{% endblock %}

{% block body %}
<div class="contact-form-container">
    <h1 class="contact-form-title">Contact</h1>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success" style="font-size:1.2em;text-align:center;margin-bottom:1em;">✅ {{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger" style="font-size:1.2em;text-align:center;margin-bottom:1em;">❌ {{ message }}</div>
    {% endfor %}
    <form method="post" class="contact-form">
        <label for="contact_email">Votre email</label>
        <input type="email" id="contact_email" name="email" required maxlength="100">
        <div id="email-error" style="display:none;color:#e10600;font-size:0.95em;margin-bottom:0.5em;">
            Veuillez entrer un email valide.
        </div>
        <label for="contact_subject">Sujet</label>
        <input type="text" id="contact_subject" name="subject" required maxlength="100">
        <label for="contact_message">Message</label>
        <textarea id="contact_message" name="message" rows="5" required maxlength="250"></textarea>
        <div id="message-count" style="font-size:0.95em;color:#555;margin-bottom:0.5em;">0 / 250 caractères</div>
        <button type="submit" class="btn">Envoyer</button>
    </form>
</div>
{% endblock %}
