{% extends 'base.html.twig' %}

{% block title %}{{ ecurie.nom }}{% endblock %}

{% block body %}
<div class="team-detail-container" style="min-height:100vh; padding:2rem 0;">
  <div class="team-banner" style="background: {{ ecurie.couleurPrincipale ? 'linear-gradient(135deg,' ~ ecurie.couleurPrincipale ~ ',#222)' : '#222'}};">
    <div style="position:relative;">
      <img src="{{ asset('assets/img/' ~ ecurie.voitureImg) }}" alt="{{ ecurie.nom }} car" class="team-banner-car" style="position:relative;z-index:2;">
    </div>
    <div class="team-banner-title">{{ ecurie.nom }}</div>
    <div class="team-banner-pilotes">
      {% for pilote in ecurie.pilotes %}
        <span class="team-pilote-link" data-pilote-id="{{ pilote.id }}" style="cursor:pointer;text-decoration:underline dotted;">{{ pilote.prenom }} {{ pilote.nom }}</span>{% if not loop.last %} - {% endif %}
      {% endfor %}
    </div>
  </div>
  <h2 class="section-title">Classement Pilotes</h2>
  <table class="stats-pilotes-table">
    <thead>
      <tr>
        <th>Pilote</th>
        <th>Points</th>
        <th>Victoires</th>
        <th>Podiums</th>
      </tr>
    </thead>
    <tbody>
      {% for pilote in ecurie.pilotes %}
        <tr>
          <td class="pilote-nom">{{ pilote.prenom }} {{ pilote.nom }}</td>
          <td>{{ pilote.piloteStat and pilote.piloteStat.pointsTotal is not null ? pilote.piloteStat.pointsTotal : '–' }}</td>
          <td>{{ pilote.piloteStat and pilote.piloteStat.victoires is not null ? pilote.piloteStat.victoires : '–' }}</td>
          <td>{{ pilote.piloteStat and pilote.piloteStat.podiums is not null ? pilote.piloteStat.podiums : '–' }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <h2 class="section-title">Statistics 2024</h2>
  <div class="stats-section">
    <div class="stats-block" id="stats-block">
      <h3 id="stats-title">2024 Season</h3>
      <ul style="list-style:none;padding:0;" id="stats-list">
        <li>Kilomètres parcourus : <b id="stat-km">{{ ecurie.stats2024.km|default(0) }}</b></li>
        <li>Points remportés : <b id="stat-points">{{ ecurie.stats2024.points|default(0) }}</b></li>
      </ul>
    </div>
    <div class="stats-block">
      <h3>Team Summary</h3>
      <!-- Ajoute ici d'autres stats si besoin -->
    </div>
  </div>
</style>
<script>
// Simuler les stats pilotes (à remplacer par des vraies données dynamiques)
const pilotesStats = {
  {% for pilote in ecurie.pilotes %}
    {{ pilote.id }}: { km: {{ pilote.stats2024.km|default(0) }}, points: {{ pilote.stats2024.points|default(0) }}, nom: '{{ pilote.prenom }} {{ pilote.nom|e('js') }}' },
  {% endfor %}
};
const ecurieStats = { km: {{ ecurie.stats2024.km|default(0) }}, points: {{ ecurie.stats2024.points|default(0) }} };

document.querySelectorAll('.team-pilote-link, .driver-card').forEach(el => {
  el.addEventListener('click', function() {
    const piloteId = this.getAttribute('data-pilote-id');
    if (piloteId && pilotesStats[piloteId]) {
      document.getElementById('stats-title').textContent = '2024 - ' + pilotesStats[piloteId].nom;
      document.getElementById('stat-km').textContent = pilotesStats[piloteId].km;
      document.getElementById('stat-points').textContent = pilotesStats[piloteId].points;
    } else {
      document.getElementById('stats-title').textContent = '2024 Season';
      document.getElementById('stat-km').textContent = ecurieStats.km;
      document.getElementById('stat-points').textContent = ecurieStats.points;
    }
  });
});
</script>
</div>
<style>
.team-detail-container { color: #fff; }
.team-banner {
  position: relative;
  border-radius: 1.5rem;
  margin-bottom: 2rem;
  padding: 2rem;
  text-align: center;
}
.team-banner-car {
  width: 60%;
  max-width: 600px;
  margin-bottom: 1.5rem;
}
.team-banner-title {
  font-size: 2.5rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
}
.team-banner-pilotes {
  font-size: 1.2rem;
  margin-bottom: 1.5rem;
}
.team-pilote-link {
  color: #fff;
  text-decoration: underline dotted;
  font-weight: 500;
  transition: color 0.2s;
}
.team-pilote-link:hover {
  color: #ffd700;
}
.section-title {
  font-size: 1.6rem;
  margin: 2rem 0 1rem 0;
  letter-spacing: 1px;
  border-bottom: 2px solid #fff2;
  padding-bottom: 0.5rem;
}
.drivers-list {
  display: flex;
  gap: 2rem;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 2rem;
}
.driver-card {
  background: #222c;
  border-radius: 1rem;
  padding: 1.5rem;
  display: flex;
  align-items: center;
  gap: 1.5rem;
  min-width: 260px;
  box-shadow: 0 2px 12px #0006;
}
.driver-photo {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid #fff3;
}
.driver-info {
  text-align: left;
}
.driver-name {
  font-size: 1.2rem;
  font-weight: bold;
}
.driver-num {
  font-size: 1.1rem;
  color: #fff8;
}
.driver-nat {
  font-size: 1rem;
  color: #fff6;
}
.stats-section {
  display: flex;
  gap: 2rem;
  flex-wrap: wrap;
  justify-content: center;
}
.stats-block {
  background: #222c;
  border-radius: 1rem;
  padding: 2rem;
  min-width: 300px;
  box-shadow: 0 2px 12px #0006;
}
</style>
{% endblock %}
