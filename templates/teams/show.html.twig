{% extends 'base.html.twig' %}

{% block title %}{{ ecurie.nom }}{% endblock %}

{% block body %}
<div class="team-detail-container">
  <div class="team-banner bg-{{ ecurie.nom|lower|replace({' ': '-'}) }}">
    <div class="team-banner-img-rel">
      <img src="{{ asset('assets/img/voiture-ecurie/' ~ ecurie.voitureImg) }}" alt="{{ ecurie.nom }} car" class="team-banner-car team-banner-car-rel">
    </div>
    <div class="team-banner-title">{{ ecurie.nom }}</div>
    <div class="drivers-list">
      {% for pilote in ecurie.pilotes %}
        <div class="driver-card">
          <img src="{{ asset('assets/img/pilote/' ~ pilote.photo) }}" alt="{{ pilote.nom }} {{ pilote.prenom }}" class="driver-photo">
          <div class="driver-info">
            <div class="driver-name">{{ pilote.prenom }} <b>{{ pilote.nom|upper }}</b></div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <h2 class="section-title">Classement Pilotes</h2>
  <table class="stats-pilotes-table">
    <thead>
      <tr>
        <th>Pilote</th>
        <th>Points</th>
        <th>Victoires</th>
        <th>Podiums</th>
      </tr>
    </thead>
    <tbody>
      {% for pilote in ecurie.pilotes %}
        <tr>
          <td class="pilote-nom">{{ pilote.prenom }} {{ pilote.nom }}</td>
          <td>{{ pilote.piloteStat and pilote.piloteStat.pointsTotal is not null ? pilote.piloteStat.pointsTotal : '–' }}</td>
          <td>{{ pilote.piloteStat and pilote.piloteStat.victoires is not null ? pilote.piloteStat.victoires : '–' }}</td>
          <td>{{ pilote.piloteStat and pilote.piloteStat.podiums is not null ? pilote.piloteStat.podiums : '–' }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
<style>
.team-detail-container { color: #fff; }
.team-banner {
  position: relative;
  border-radius: 1.5rem;
  margin-bottom: 2rem;
  padding: 2rem;
  text-align: center;
}
.team-banner-car {
  width: 60%;
  max-width: 600px;
  margin-bottom: 1.5rem;
}
.team-banner-title {
  font-size: 2.5rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
}
.team-banner-pilotes {
  font-size: 1.2rem;
  margin-bottom: 1.5rem;
}
.team-pilote-link {
  color: #fff;
  text-decoration: underline dotted;
  font-weight: 500;
  transition: color 0.2s;
}
.team-pilote-link:hover {
  color: #ffd700;
}
.section-title {
  font-size: 1.6rem;
  margin: 2rem 0 1rem 0;
  letter-spacing: 1px;
  border-bottom: 2px solid #fff2;
  padding-bottom: 0.5rem;
}
.drivers-list {
  display: flex;
  gap: 2rem;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 2rem;
}
.driver-card {
  background: #222c;
  border-radius: 1rem;
  padding: 1.5rem;
  display: flex;
  align-items: center;
  gap: 1.5rem;
  min-width: 260px;
  box-shadow: 0 2px 12px #0006;
}
.driver-photo {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid #fff3;
}
.driver-info {
  text-align: left;
}
.driver-name {
  font-size: 1.2rem;
  font-weight: bold;
}
.driver-num {
  font-size: 1.1rem;
  color: #fff8;
}
.driver-nat {
  font-size: 1rem;
  color: #fff6;
}
.stats-section {
  display: flex;
  gap: 2rem;
  flex-wrap: wrap;
  justify-content: center;
}
.stats-block {
  background: #222c;
  border-radius: 1rem;
  padding: 2rem;
  min-width: 300px;
  box-shadow: 0 2px 12px #0006;
}
</style>
{% endblock %}
