{% extends 'base.html.twig' %}
{% block body %}
<div class="auth-form-container">
    <h1 class="auth-form-title">Mot de passe oublié</h1>
    <form method="post" class="auth-form">
        <label for="email">Votre email :</label>
        <input type="email" name="email" id="email" required class="auth-input">
        <button type="submit" class="btn" style="margin-top:1.2rem;">Envoyer le lien de réinitialisation</button>
    </form>
    <div class="form-links" style="margin-top: 1.5rem;">
        <a href="{{ path('app_login') }}" class="auth-link-simple">Retour à la connexion</a>
    </div>
</div>
{% endblock %}
