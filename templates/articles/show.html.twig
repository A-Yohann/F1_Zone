{% extends 'base.html.twig' %}
{% block title %}{{ article.titre }} | Actu F1{% endblock %}
{% block body %}
<div class="article-detail-container">
    <div class="article-detail-card">
        <div class="article-detail-img">
            {% if article.image %}
                <img src="{{ asset('assets/img/' ~ article.image) }}" alt="{{ article.titre }}">
            {% endif %}
        </div>
        <div class="article-detail-content">
            <h1>{{ article.titre }}</h1>
            <p class="article-date">{{ article.createdAt|date('d/m/Y') }}</p>
            <div class="article-description">{{ article.contenu|raw }}</div>
        </div>
        <a href="{{ path('article_index') }}" class="btn-back">‚Üê Retour aux actus</a>
    </div>
</div>
{% endblock %}
