{% extends 'base.html.twig' %}

{% block title %}Vidéos Résumés Grands Prix{% endblock %}

{% block body %}
<div class="gp-resume-container">
  <h1 class="gp-resume-title">Vidéos Résumés des Grands Prix</h1>
  <div class="gp-resume-filter">
    <label for="resume-type">Filtrer par&nbsp;:</label>
    <select id="resume-type">
      <option value="all">Tous</option>
      <option value="gp">Grands Prix</option>
      <option value="sprint">Sprints</option>
    </select>
  </div>
  <div class="gp-resume-list gp-resume-grid">
    {% for video in videos %}
      <a href="{{ path('gp_resume_show', {'id': video.id}) }}" class="gp-resume-card-link">
        <div class="gp-resume-card">
          <h2>{{ video.titre }}</h2>
          <div class="gp-resume-video">
            <iframe width="560" height="315" src="{{ video.url }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
  <div class="gp-resume-pagination" style="text-align:center;margin-top:2rem;">
    {% if pages > 1 %}
      <nav aria-label="Pagination">
        {% for p in 1..pages %}
          <a href="{{ path('gp_resume', {'page': p}) }}" class="gp-resume-page-btn{% if p == page %} active{% endif %}" style="display:inline-block;padding:0.6em 1.2em;margin:0 0.3em;border-radius:8px;background:#23243a;color:#fff;font-weight:bold;text-decoration:none;{% if p == page %}background:#ff2d2d;color:#fff;{% endif %}">
            {{ p }}
          </a>
        {% endfor %}
      </nav>
    {% endif %}
  </div>

</div>
{% endblock %}
